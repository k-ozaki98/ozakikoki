							</li>
						</ul>
	
						{article.category?.length > 0 && (
							<ul class="category">
								{article.category.map((cat, i) => (
									<li class="item">{cat.name}</li>
								))}
							</ul>
						) }
	
						<div class="article-header">
							<h1 class="ttl">
								{article.title}
